{
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "name": "my-project",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "mocha",
    "start": "parcel static/index.html --no-cache --port 3000",
    "dev": "parcel static/index.html --no-cache",
    "build": "npx -p parcel-bundler parcel build static/index.html",
    "stylelint": "stylelint **/*.scss --fix",
    "precommit": "lint-staged",
    "eslint:fix": "eslint src/",
    "lint": "npm run eslint:fix && npm run stylelint",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.8.3",
    "@parcel/transformer-sass": "^2.8.3",
    "@types/pug": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^5.7.1",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.39.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.0",
    "parcel": "^2.8.3",
    "parcel-bundler": "^1.12.5",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "pug-plugin": "^4.9.5",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "sass": "^1.58.3",
    "sass-loader": "^13.2.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "stylelint": "^15.6.0",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^5.0.4",
    "url": "^0.11.0",
    "util": "^0.12.5",
    "@parcel/transformer-css": "^2.8.3",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.20",
    "chai": "^4.3.10",
    "express": "4.18.2",
    "handlebars": "^4.7.8",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "^10.2.0",
    "nanoid": "3",
    "nodemon": "2.0.21",
    "parcel-plugin-pug": "0.3.1",
    "pug": "3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "pug-runtime": "^3.0.1",
    "sinon": "^17.0.0",
    "ts-node": "^10.9.1",
    "vite": "^4.4.9",
    "vite-plugin-checker": "^0.6.1"
  }
}
