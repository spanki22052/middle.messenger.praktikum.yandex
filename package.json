{
  "targets": {
    "global": {
      "context": "browser",
      "outputFormat": "global"
    }
  },
  "name": "my-project",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "test": "mocha",
    "start": "vite",
    "dev": "vite --port 3000 --host",
    "build": "rimraf ./dist/* && vite build",
    "stylelint": "stylelint **/*.scss --fix",
    "precommit": "lint-staged",
    "eslint:fix": "eslint src/",
    "lint": "npm run eslint:fix && npm run stylelint",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@parcel/transformer-css": "^2.8.3",
    "@parcel/transformer-sass": "^2.8.3",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-react": "^4.1.0",
    "assert": "^2.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^5.7.1",
    "crypto-browserify": "^3.12.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "^10.2.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "vite": "^4.5.0",
    "vite-plugin-html": "^3.2.0",
    "eslint": "^8.52.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "7.0.1",
    "stylelint-scss": "4.4.0",
    "ts-node": "^10.9.1",
    "eslint-plugin-import": "^2.27.5",
    "vite-plugin-html-template": "^0.1.0",
    "css-loader": "^6.7.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "chai": "^4.3.10",
    "express": "4.18.2",
    "handlebars": "^4.7.8",
    "jsdom": "^22.1.0",
    "nanoid": "3",
    "sinon": "^17.0.0"
  }
}
